@model ContactCenter.Data.User
@{
    var id = ViewContext.RouteData.Values["id"]?.ToString();
}
<div class="card">
    <div class="card-body">
        <div class="row mb-3">
            <label class="col-md-3">Login Id<i class="text-danger">*</i></label>
            <div class="col-md-9">
                <input asp-for="LoginId" readonly="@(id!=null)" required class="form-control" />
                <span asp-validation-for="LoginId" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-3">
            <label class="col-md-3">Role<i class="text-danger">*</i></label>
            <div class="col-md-9">
                <select asp-for="Role" class="form-control" data-bind="value:Role" asp-items="@Html.GetListItems<UserRole>()">
                    <option value="">Select..</option>
                </select>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-3">
            <label class="col-md-3">Full name<i class="text-danger">*</i></label>
            <div class="col-md-9">
                <input asp-for="Name" type="text" required class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-3">
            <label class="col-md-3">Email address<i class="text-danger">*</i></label>
            <div class="col-md-9">
                <input asp-for="Email" type="email" required class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-3">
            <label class="col-md-3">Extension<i class="text-danger">*</i></label>
            <div class="col-md-4">
                <input asp-for="Extension" maxlength="16" type="text" class="form-control" />
                <span asp-validation-for="Extension" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-3">
            <label class="col-md-3">Mobile</label>
            <div class="col-md-4">
                <input asp-for="Mobile" type="text" class="form-control" />
                <span asp-validation-for="Mobile" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-3">
            <label class="col-md-3">Activate account?</label>
            <div class="col-md-9">
                <input asp-for="IsActive" type="checkbox" checked />
            </div>
        </div>
    </div>
    <div class="card-footer">
        <button class="btn btn-@(id==null?"success":"primary")"><i class="fa fa-save"></i> Save</button>
    </div>
</div>

